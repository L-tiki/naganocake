<div class="container">
  <div class="row mt-4">
    <h2>新規会員登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
    <div class="row mt-3">
      <div class="col-3"><%= f.label "名前" %></div>
      <div class="col-3"><%= f.text_field :last_name, placeholder:"令和"%></div>
      <div class="col-3"><%= f.text_field :first_name, placeholder:"道子" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3"><%= f.label "フリガナ" %></div>
      <div class="col-3"><%= f.text_field :last_name_kana, placeholder:"レイワ" %></div>
      <div class="col-3"><%= f.text_field :first_name_kana, placeholder:"ミチコ" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3"><%= f.label "メールアドレス" %></div>
      <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3"><%= f.label "郵便番号" %></div>
      <div class="col-3"><%= f.text_field :postal_code, placeholder:"0000000" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3"><%= f.label "住所"%></div>
      <div class="col-8"><%= f.text_field :address, class: "w-100", placeholder:"東京都渋谷区代々木神園町0-0" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3"><%= f.label "電話番号（ハイフンなし）"%></div>
      <div class="col-3"><%= f.text_field :telephone_number, placeholder:"0000000000" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3"><%= f.label "パスワード（６文字以上）" %></div>
      <div class="col-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3"><%= f.label "パスワード（確認用）" %></div>
      <div class="col-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3"></div>
      <div class="col-3"><%= f.submit "新規登録", class: "btn btn-success btn-block" %></div>
    </div>
  <% end %>

  <div class="row mt-3">
    <h4>既に登録済みの方</h4>
  </div>
  <div class="row mt-2 ml-3"><u><%= link_to "こちら", new_customer_session_path %></u>　からログインしてください。</div>

</div>