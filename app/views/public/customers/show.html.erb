<div class="container">
  <div class="row col-6">
    <h4 class="mt-4">マイページ</h4>
  </div>

  <div class="mt-3">
    <div class="row">
      <h4><strong>登録情報</strong></h4>
      <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success ml-5" %>
    </div>

    <table class="col-6 table table-bordered mt-3 mb-4">
      <tr>
        <td class="col-3 table-active border-dark">氏名</td>
        <td class="border-dark"><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <td class="col-3 table-active border-dark">カナ</td>
        <td class="border-dark"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td class="col-3 table-active border-dark">郵便番号</td>
        <td class="border-dark"><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td class="col-3 table-active border-dark">住所</td>
        <td class="border-dark"><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="col-3 table-active border-dark">電話番号</td>
        <td class="border-dark"><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td class="col-3 table-active border-dark">メールアドレス</td>
        <td class="border-dark"><%= @customer.email %></td>
      </tr>
    </table>

    <div class="row mb-3">
      <h4><strong>配送先</strong></h4>
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary ml-5" %>
    </div>
    <div class="row">
      <h4><strong>注文履歴</strong></h4>
      <%= link_to "一覧を見る", public_orders_index_path, class: "btn btn-primary ml-4" %>
    </div>

  </div>
</div>