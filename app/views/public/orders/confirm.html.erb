<div class='container'>
  <h2>注文情報確認</h2>
  <div class="row">
    <div class="col-7">
      <table class='table table-bordered'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart| %>
            <tr>
              <td><%= cart.name %></td>
              <td></td>
              <td><%= cart.amount %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <table class='table table-bordered'>
      <tr>
        <th>送料</th>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td></td>
      </tr>
    </table>
