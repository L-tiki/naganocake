<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#bc8f8f;">
    <div class="container">
      <nav class="navbar-brand navbar-left header-logo">
        <%= link_to image_tag("logo1.png", size: "70x50"), root_path, class: "header-button btn text-light" %>
        </nav>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="nav navbar-nav ml-auto">
          <!-- 顧客がログインしている時 -->
          <% if customer_signed_in? %>
            <p>ようこそ、<%= current_customer.last_name %>さん！</p>
            <li><%= link_to "マイページ", customer_path, class: "header-button btn text-light" %></li>  <!--パス未確認 -->
            <li><%= link_to "商品一覧",  class: "header-button btn text-light" %></li>  <!--パス未確認 -->
            <li><%= link_to "カート", class: "header-button btn text-light" %></li>  <!--パス未確認 -->
            <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "header-button btn text-light" %></li>

          <!-- 管理者がログインしている時 -->
          <% elsif admin_signed_in? %>
            <li><%= link_to "商品一覧", admin_items_path, class: "header-button btn text-light" %></li>  <!--パス未確認 -->
            <li><%= link_to "会員一覧", admin_customers_path, class: "header-button btn text-light" %></li>  <!--パス未確認 -->
            <li><%= link_to "注文履歴一覧", admin_root_path, class: "header-button btn text-light" %></li>
            <li><%= link_to "ジャンル一覧", admin_genres_path, class: "header-button btn text-light" %></li>  <!--パス未確認 -->
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "header-button btn text-light" %></li>

          <!-- ログインしていない時 -->
          <% else %>
            <li><%= link_to "About", homes_about_path, class: "header-button btn text-light" %></li>
            <li><%= link_to "商品一覧", class: "header-button btn text-light" %></li>  <!-- パス未確認　-->
            <li><%= link_to "新規登録", new_customer_registration_path, class: "header-button btn text-light" %></li>
            <li><%= link_to "ログイン", new_customer_session_path, class: "header-button btn text-light" %></li>
          <% end %>
        </ul>

        <!-- 検索機能 -->
        <form class="d-flex">
          <input class="ml-2 form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-light ml-2" type="submit">
            <i class="fas fa-search">Search</i>
          </button>
        </form>
      </div>
    </div>
  </nav>
</header>