<div class="container">
  <div class="row mt-3">
    <h4>注文履歴一覧</h4>
  </div>

  <table class="table mt-3">
    <thead>
      <tr>
        <th class="table-active">購入日時</th>
        <th class="table-active">購入者</th>
        <th class="table-active">注文個数</th>
        <th class="table-active">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><u><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id), class: "text-dark" %></u></td>
          <td><%= order.customer.full_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.status_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row justify-content-center">
    <%= paginate @orders %>
  </div>

</div>