<div class="container">
  <div class="row">
    <h4 class="mt-4">ジャンル編集</h4>
  </div>

  <div class="row">
    <div class="mt-3">
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name, class: "ml-5" %>
        <%= f.submit '変更を保存', class: "btn btn-success ml-5" %>
      <% end %>
    </div>
  </div>

</div>