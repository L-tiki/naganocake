<h1>商品一覧</h1>
<table class="table table-hover table-inverse">
<thead>
  <tr>
    <th>商品id</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>販売ステータス</th>
  </tr>
</thead>
<tbody>
  <% @items.each do |item| %>
  <tr>

    <td><%= item.id %></td>
    <td>
      <%=link_to admin_item_path(item.id) do %>
      <%=item.name%>
      <%end%>
      </td>
    <td><%=item.price%></td>
    <td><%=item.genre.name%></td>
     <td><% if item.is_active == false %>
              販売中
              <% else %>
              販売停止中
              <% end %></td>
  </tr>
  <%end%>
</tbody>
</table>
