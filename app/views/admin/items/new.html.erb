<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path do |f|%>

<h4>商品画像</h4>
<%=f.file_field :image,acoept: "image/*" %>
<h4>商品名</h4>
<%= f.text_field :name %>
<h4>商品説明</h4>
<%= f.text_area :introduction %>
<h4>ジャンル</h4>
<%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %>
<h4>税抜価格</h4>
<%= f.text_field :price %>
<h4>販売ステータス</h4>
<%= f.select :is_active, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %>
<%= f.submit'新規登録' %>

<%end%>