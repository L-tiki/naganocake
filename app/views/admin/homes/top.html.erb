<div class="container">
  <div class="row mt-3">
    <h4>注文一覧</h4>
  </div>

  <table class="table table-bordered mt-3 mb-4">
    <thead>
      <tr>
        <th class="table-active border-dark">購入日時</th>
        <th class="table-active border-dark">購入者</th>
        <th class="table-active border-dark">注文個数</th>
        <th class="table-active border-dark">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class="border-dark"><u><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id), class: "text-dark"  %></u></td>
          <td class="border-dark"><%= order.name %></td>
          <td class="border-dark"><%= order.order_details.sum(:amount) %></td>
          <td class="border-dark"><%= order.status_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>