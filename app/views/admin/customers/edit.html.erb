<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員情報編集</h2>
    </div>
    <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
      <table class="table">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
      </table>
      <table class="table">
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
      </table>
      <table class="table">
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
      </table>
      <table class="table">
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
      </table>
      <table class="table">
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
      </table>
      <table class="table">
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
      </table>
      <table class="table">
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
      </table>
      <table class="table">
        <tr>
          <td>会員ステータス</td>
          <td><%= f.radio_button :is_deleted, false %>有効</td>
          <td><%= f.radio_button :is_deleted, true %>退会</td>
        </tr>
      </table>
      <div class="button">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>